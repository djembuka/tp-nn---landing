@import '../../styl/vars.styl'
@import '../../styl/mixins.styl'

body
  color #1e3752
  font-size 13pt
  line-height 1.7
  height 100vh
  min-height 600px
  
section
  min-height 400px
  height calc( 100vh - 45vh )
  
h1
  margin 0 0 10px -95px
  padding-top 30px
  opacity 0
  transition( opacity 1.5s ease )
  
  .i-load &
    opacity 1
    
  @media( max-width 700px )
    margin-left -30px

.b-h1
  font-size 21pt
  font-family "PT Serif", serif
  font-weight 400
  margin-bottom 35px
  line-height 1.4
  opacity 0
  transform( translateY( 30px ))
  transition( all .5s ease 1s )
  
  .i-load &
    opacity 1
    transform( translateY(0))
  
a
  
  &,
  &:hover
    color #0052da
    
p
  opacity 0
  transform( translateY( 30px ))
  transition( all .5s ease 1.2s )
  
  .i-load &
    opacity 1
    transform( translateY(0))
    
footer
  background-color #1e3752
  font-size 8pt
  color #fff
  height 45vh
  border-top 2px solid #a49645
  
  span
    margin-right 30px
    
.b-footer-logo
  width 160px
  height 72px
  background-repeat no-repeat
  background-position center
  background-size cover
  transform( translateY( -16px ))
  margin-bottom 40px
  
@media( max-width 1023px )

  footer
    
    span
      display block
    
@media( max-height 700px )

  section
    min-height 400px
    height calc( 100vh - 200px )

  footer
    height 200px
      
  .b-footer-logo
    margin-bottom 20px
  
  
    
  